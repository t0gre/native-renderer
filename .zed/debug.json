// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug app",
    "build": {
      "command": "cmake",
      "args": ["--build", "--preset app-debug"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/debug/native",
    "args": [],
    "request": "launch",
    "adapter": "CodeLLDB",
    "cwd": "$ZED_WORKTREE_ROOT/build/debug/"
  },
  {
    "label": "Debug tests",
    "build": {
      "command": "cmake",
      "args": ["--build", "--preset tests-debug"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/debug/tests",
    "args": [],
    "request": "launch",
    "adapter": "CodeLLDB",
    "cwd": "$ZED_WORKTREE_ROOT/build/debug/"
  }
]
